{
  "name": "yugen",
  "devDependencies": {
    "turbo": "^2.7.2",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.1.0",
    "@cloudflare/workers-types": "^4.20250822.0"
  },
  "packageManager": "bun@1.2.16",
  "private": true,
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @yugen/backend dev",
    "dev:setup": "turbo -F @yugen/backend dev:setup",
    "deploy": "cd apps/web && bun run deploy",
    "setup:convex": "bun run scripts/setup-convex.ts",
    "setup:convex:dev": "bun run scripts/setup-convex.ts --dev-only",
    "setup:convex:prod": "bun run scripts/setup-convex.ts --prod-only",
    "rename-project": "bun run rename-project.ts"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.31.2",
      "better-auth": "1.4.9",
      "@convex-dev/better-auth": "0.10.9",
      "typescript": "^5.9.3"
    }
  },
  "dependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "convex": "^1.31.2",
    "humanbehavior-js": "^0.5.55"
  }
}
